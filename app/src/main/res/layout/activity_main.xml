<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_hw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130sp"
        android:text="Biodata"
        android:textColor="@color/item"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25sp"
        android:layout_below="@id/tv_hw"
        android:layout_marginLeft="10dp"
        android:text="Nama "
        android:textSize="24dp" />

    <EditText
        android:id="@+id/tv_nama1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/tv_nama"
        android:text=":"/>

    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nama"
        android:layout_marginTop="2dp"
       android:layout_marginLeft="10dp"
        android:text="Alamat "
        android:textSize="24dp" />
    <EditText
        android:id="@+id/tv_alamat1"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/tv_alamat"
    android:text=":"
    android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/tv_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_alamat"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="TTL"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/tv_ttl1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_ttl"
        android:text=":"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="38dp"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@+id/tv_ttl"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/tv_email1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:layout_toRightOf="@+id/tv_email"
        android:text=":" />

     <TextView
         android:id="@+id/tv_no"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="No.HP"
         android:textSize="24dp"
         android:layout_below="@+id/tv_email"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/tv_no1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_no"
        android:layout_marginTop="260dp"
        android:text=":"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/btn_pindah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no"
        android:layout_centerHorizontal="true"
        android:background="#0e49b5"
        android:layout_marginTop="20dp"
        android:text="SUBMIT"
        android:textSize="20sp"/>
</RelativeLayout>